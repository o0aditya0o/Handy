<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cffaf0">

    <TextView
        android:layout_marginTop="5dp"
        android:text="Set the Brightness and Sound of PC"
        android:textSize="21dp"
        android:textColor="#ff0000"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <SeekBar
        android:layout_marginTop="60dp"
        android:id="@+id/brightBar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:background="@drawable/red_button"
        android:layout_marginTop="10dp"
        android:text="Set Brightness"
        android:textColor="#cffaf0"
        android:id="@+id/setBright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="setBright"

       />

    <SeekBar
        android:layout_marginTop="100dp"
        android:id="@+id/soundBar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:background="@drawable/red_button"
        android:layout_marginTop="10dp"
        android:text="Set Sound"
        android:textColor="#cffaf0"
        android:id="@+id/setSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="setSound"/>
</LinearLayout>